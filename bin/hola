#!/usr/bin/env ruby

require 'thor'
require_relative '../lib/hola'

#puts Hola.hi(ARGV[0])

class MyHola < Thor
  include Thor::Actions    
  desc "ninja NAME", "say hello to ninja"
  def ninja(name)
    puts "Big Hello ninja #{name}"
  end

  desc "echo_for_me", "echo_for_me!"
  def echo_for_me
    command = "bundle exec echo 'mushi'"
    system(command)
  end

end

MyHola.start(ARGV)
