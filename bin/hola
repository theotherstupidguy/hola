#!/usr/bin/env ruby
require 'thor'
require 'hola'

puts Hola.hi(ARGV[0])

class MyHola < Thor
  include Thor::Actions    
  desc "hello NAME", "say hello to NAME"
  def big(name)
    puts "Big Hello #{name}"
  end

  desc "start", "Starts the server in style!"
  def start(*args)
    command = "bundle exec thin -R config.ru start #{port_option} #{args}"
    system(command)
  end

end

MyHola.start(ARGV)
